            </select>
            <label for="movement_time_international_mobility" id="movement_time_international_mobility">Attitude Problems: </label>
            <select class="form-control" data-with="Do not apply" id="status" name="status">
              <option value="Inmediate" >Inmediate</option>
              <option valu="Do not apply" selected >Do not apply</option>
            </select>
            <label for="possibility_of_development" id="possibility_of_development">Time development movement possibility:</label>
            <select class="form-control" data-with="Do not apply" id="status" name="status">
             <option value="Inmediate">Inmediate</option>
             <option valu="Do not apply" selected >Do not apply</option>
            </select>
          </div>
            <div id="btn_cancel">
               <button type="submit">Cancel</button>
         </div>

         <div id="btn_save">
           <button type="submit">Save</button>
         </div>
          
        </div>
        <div class="mpanel pan-invisible" id="com">
              
        <h1 class="section-header">
            COMPETENCIES
